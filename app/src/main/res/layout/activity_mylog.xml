<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 컨텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NutriScanner"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/withChatGPT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with ChatGPT"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- 인삿말 박스 -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 기록 관리\n과거 내가 분석한 기록을 찾아볼 수 있습니다.\n해당 카드를 터치해 나의 기록을 되짚어 보세요."
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#EEF6FF"
            android:background="@drawable/rounded_box"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myLogRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical" />


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>